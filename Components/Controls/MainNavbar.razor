                <MudImage Src="/assets/dashboard/navbar/search.svg" />
            </div>
        </MudButton>
    </MudForm>
    <div class="flex w-[90px] md:w-[140px] xl:w-[410px] justify-between">
        <div class="flex w-[170px] h-full items-center">
            <MudButton class="min-w-[40px] h-[40px] md:min-w-[45px] md:h-[45px] md:w-[45px] lg:min-w-[55px] lg:h-[55px] xl:min-w-[58px] xl:h-[58px] bg-[var(--lightgreen-color)] !rounded-[10px] flex justify-center item-center shadow-lg">
                <div>
                    <MudImage Src="/assets/dashboard/navbar/account.svg" Class="w-[12px] md:w-[18px]"/>
                </div>
            </MudButton>
            <div class="hidden xl:flex flex-col w-full">
                <p class="flex w-full items-end mb-[-10px]">
                    <MudNavLink Href="/login" Class="w-[150px] mr-[5px]">Log in</MudNavLink>
                    or
                    <MudNavLink Href="/login" Class="ml-[-5px]">Sign up</MudNavLink>   
                </p>
                <MudNavLink Href="#"><p class="font-[700]">My Account</p></MudNavLink> 
            </div>
        </div>
        <div class="w-[120px] flex items-center justify-between">
            <MudButton class="min-w-[40px] h-[40px] md:min-w-[45px] md:h-[45px] md:w-[45px] lg:min-w-[55px] lg:h-[55px] xl:min-w-[58px] xl:h-[58px] bg-[var(--lightgreen-color)] !rounded-[10px] flex justify-center item-center !p-0 shadow-lg">
                <div>
                    <MudImage Src="/assets/dashboard/navbar/cart.svg" Class="w-[25px] md:w-[30px]" />
                </div>
