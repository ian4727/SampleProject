            <MudImage Src="assets/general/logo.svg" Alt="Logo" class="w-[148px] md:w-[280px] lg:w-[250px] xl:w-[252px]"/>
        </div>
    </MudNavLink>
    <MudForm class="hidden xl:flex lg:w-[45%] xl:max-2xl:w-[35%] h-[58px] relative">
